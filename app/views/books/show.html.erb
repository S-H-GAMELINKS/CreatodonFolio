
<p>
  <strong>作品名:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>解説:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong>作者名:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>作品:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<% if user_signed_in? %>
<td><%= link_to '編集', edit_book_path(@book) %></td>
<td><%= link_to '削除', @book, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
<% end %>

<%= link_to '戻る', books_path %>
