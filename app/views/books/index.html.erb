<p id="notice"><%= notice %></p>

<h1>作品一覧</h1>

<table>
  <thead>
    <tr>
      <th>作品名</th>
      <th>作品解説</th>
      <th>作者名</th>
      <th>作品</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to 'Show', book %></td>
        <% if notice %>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if notice %>
  <%= link_to 'New Book', new_book_path %>
<% end %>