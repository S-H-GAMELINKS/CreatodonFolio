
<h1>作品一覧</h1>

<table>
  <thead>
    <tr>
      <th>作品名</th>
      <th>作品解説</th>
      <th>作者名</th>
      <th>作品</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= image_tag(book.picture) %></td>
        <td><%= link_to '閲覧', book %></td>
        <% if user_signed_in? %>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>

<br>
<% if user_signed_in? %>
  <%= link_to '作品投稿', new_book_path %>
<% end %>